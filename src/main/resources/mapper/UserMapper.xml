<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.cloudshadow.mapper.UserMapper">

    <!-- 开启二级缓存 -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.chen.cloudshadow.pojo.User">
        <id column="user_id" property="userId" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="email" property="email" />
        <result column="phone_number" property="phoneNumber" />
        <result column="role" property="role" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        user_id, username, password, email, phone_number, role, created_at, updated_at
    </sql>
    <!--查询用户列表-->
    <select id="query" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from user
    </select>

    <!--通过id查询单个用户-->
    <select id="queryById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from user
        where user_id = #{userId}
    </select>

    <!--通过用户名查询用户信息-->
    <select id="queryByUsername" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from user
        where username = #{username}
    </select>

    <!--插入新用户-->
    <insert id="addUser" keyColumn="user_id" keyProperty="userId" useGeneratedKeys="true">
        insert into user (username, password, email, phone_number, role, created_at, updated_at)
        values (#{username}, #{password}, #{email}, #{phoneNumber}, #{role}, #{createdAt}, #{updatedAt})
    </insert>

    <!--更新用户信息-->
    <update id="updateUser">
        update user
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="passwordHash != null">password = #{password},</if>
            <if test="email != null">email = #{email},</if>
            <if test="phoneNumber != null">phone_number = #{phoneNumber},</if>
            <if test="role != null">role = #{role},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
        </set>
    </update>
</mapper>
